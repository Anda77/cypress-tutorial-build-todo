{
  "extends": ["config:base"],
  "automerge": true,
  "commitMessage": "{{semanticPrefix}}Update {{depName}} to {{newVersion}} ðŸŒŸ",
  "prTitle": "{{semanticPrefix}}{{#if isPin}}Pin{{else}}Update{{/if}} dependency {{depName}} to version {{newVersion}} ðŸŒŸ",
  "prConcurrentLimit": 3,
  "prHourlyLimit": 2,
  "schedule": ["after 2am and before 3am on saturday"],
  "updateNotScheduled": false,
  "timezone": "America/New_York",
  "lockFileMaintenance": {
    "enabled": true
  },
  "separatePatchReleases": true,
  "separateMultipleMajor": true,
  "masterIssue": true,
  "labels": ["type: dependencies", "renovate"],
  "baseBranchList": [
    "master",
    "01_setup",
    "02_inputs",
    "03_form_sub",
    "04_custom_cmd",
    "05_todo_items",
    "06_toggle_debug",
    "07_data_driven",
    "08_smoke_1",
    "09_smoke_2"
  ],
  "packageRules": [
    {
      "packageNames": ["cypress"],
      "groupName": "cypress",
      "schedule": "before 2am"
    },
    {
      "packagePatterns": "*",
      "excludePackageNames": "cypress",
      "groupName": "all but cypress",
      "enabled": false
    }
  ]
}
